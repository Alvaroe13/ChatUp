<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.alvar.chatapp">

    <application
        android:name=".Firebase.FirebaseOfflineCapabilities"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".Activities.ImageActivity"></activity>
        <activity android:name=".Activities.PhoneLoginActivity" />
        <activity android:name=".Activities.AnswerRequestActivity" />
        <activity android:name=".Activities.MainActivity" /> <!-- Let's make the login activity the default one to be open first when app launched -->
        <activity android:name=".Activities.LoginActivity">

            <!-- using this -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.RegisterActivity"
            android:parentActivityName=".Activities.LoginActivity"
            tools:targetApi="jelly_bean" />
        <activity android:name=".Activities.SettingsActivity" />
        <activity
            android:name=".Activities.RecoverPasswordActivity"
            android:parentActivityName=".Activities.LoginActivity"
            tools:targetApi="jelly_bean" />
        <activity
            android:name=".Activities.StatusChangeActivity"
            android:parentActivityName=".Activities.SettingsActivity" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:name=".Activities.GroupChatActivity"
            android:parentActivityName=".Activities.MainActivity" />
        <activity
            android:name=".Activities.AllUsersActivity"
            android:parentActivityName=".Activities.MainActivity" />
        <activity android:name=".Activities.OtherUserProfileActivity" />
        <activity
            android:name=".Activities.ContactsActivity"
            android:parentActivityName=".Activities.MainActivity" />
        <activity
            android:name=".Activities.ChatActivity"
            android:parentActivityName=".Activities.ContactsActivity" />
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>