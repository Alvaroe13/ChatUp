<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:padding="0.5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageChat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/profile_image"/>

        <TextView
            android:id="@+id/textLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageChat"
            android:layout_toEndOf="@+id/imageChat"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            android:layout_marginRight="70dp"
            android:layout_marginEnd="70dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/left_message_layout"
            android:padding="9dp"
            android:text="text right"
            android:textColor="@color/color_grey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="70dp"
            android:layout_marginStart="70dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/right_message_layout"
            android:padding="9dp"
            android:text="text left"
            android:textColor="@color/color_grey"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/imageLeft"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="55dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/imageChat"
            android:layout_toRightOf="@+id/imageChat"
            android:src="@drawable/file"
            android:padding="5dp"
            android:background="@drawable/left_message_layout"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/imageRight"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/file"
            android:padding="5dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/right_message_layout"
            android:scaleType="centerCrop"/>


    </RelativeLayout>

</LinearLayout>