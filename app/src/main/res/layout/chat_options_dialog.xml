<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_grey_light">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/color_grey_light">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:text="Select one option"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp" >


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/shareImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginRight="40dp"
                android:src="@drawable/icon_photo" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/shareDocx"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/shareImage"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginRight="40dp"
                android:src="@drawable/icon_doc" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/sharePDF"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/shareDocx"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginRight="40dp"
                android:src="@drawable/icon_pdf" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/shareLocation"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/sharePDF"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/icon_location" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>