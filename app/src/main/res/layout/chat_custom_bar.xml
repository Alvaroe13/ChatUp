<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageToolbarChat"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:cropToPadding="true"
        android:src="@drawable/profile_image"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/onlineIcon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@+id/imageToolbarChat"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-11dp"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"
        android:src="@drawable/online"
        android:visibility="visible" />

    <TextView
        android:id="@+id/usernameToolbarChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageToolbarChat"
        android:textColor="@color/color_white"
        android:textSize="18sp"
        android:text="Username" />

    <TextView
        android:id="@+id/lastSeenChatToolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usernameToolbarChat"
        android:layout_marginTop="7dp"
        android:text="last seen"
        android:textColor="@color/color_white"
        android:textSize="12sp" />

</RelativeLayout>