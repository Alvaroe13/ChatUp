<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.GroupChatActivity">

    <include
        android:id="@+id/toolbarGroupChat"
        layout="@layout/toolbar" />

    <ScrollView
        android:id="@+id/groupChatScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layoutEditField"
        android:layout_below="@+id/toolbarGroupChat"
        android:background="#c3c3c3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/chatText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="60dp"
                android:hint="@string/textHint"
                android:padding="10dp"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="18sp" />


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/layoutEditField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="@color/color_white"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/editTextWriteMessage"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:backgroundTint="@color/color_white"
            android:hint="@string/writeMessageHint"
            android:padding="17dp" />

        <ImageButton
            android:id="@+id/buttonSend"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/icons8_email_send_16" />

    </LinearLayout>


</RelativeLayout>